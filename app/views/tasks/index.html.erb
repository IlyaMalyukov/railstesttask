<p id="notice"><%= notice %></p>

<h1>Объявления</h1>

<table class="table">
  <thead>
    <tr>
      <th>Заголовок </th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to 'Просмотр', task %></td>
        <td><%= link_to 'Редактировать', edit_task_path(task) %></td>
        <td><%= link_to 'Удалить', task, method: :delete, data: { confirm: 'Удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать', new_task_path, class:"btn btn-success" %>
