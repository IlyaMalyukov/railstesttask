<p id="notice"><%= notice %></p>


<h1>Задания</h1>

<table class="table">
  <thead>
    <tr>
      <th>Заголовок </th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
          <%= task.content %>
          <br>
          <%= task.user.fullname %> |
          <%= task.created_at %>
          <br>
          <%= render 'tasks/replies', task: task %>
        </td>
        
        <td><%= link_to 'Просмотр', task %></td>

        <% if task.user == current_user %>
          <td><%= link_to 'Редактировать', edit_task_path(task) %></td>
          <td><%= link_to 'Удалить', task, method: :delete, data: { confirm: 'Удалить?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
